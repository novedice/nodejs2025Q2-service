generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          String   @id @default(uuid())
  login       String   @unique
  password    String
  version     Int      @default(1)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  favorites   Favorites?
}

model Artist {
  id          String @id @default(uuid())
  name        String
  grammy      Boolean
  
  tracks      Track[]
  albums      Album[]
  favorites   Favorites[]
}

model Track {
  id          String  @id @default(uuid())
  name        String
  duration    Int
  artistId    String? 
  artist      Artist? @relation(fields: [artistId], references: [id], onDelete: SetNull)
  albumId     String?
  album       Album?  @relation(fields: [albumId], references: [id], onDelete: SetNull)
  favorites   Favorites[]
}

model Album {
  id          String @id @default(uuid())
  name        String
  year        Int

  tracks      Track[]

  artist      Artist? @relation(fields: [artistId], references: [id], onDelete: SetNull)
  artistId    String?  

  favorites   Favorites[]
}

model Favorites {
  id          String @id @default(uuid())

  userId      String @unique
  user        User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  artists     Artist[]
  albums      Album[]
  tracks      Track[]
}